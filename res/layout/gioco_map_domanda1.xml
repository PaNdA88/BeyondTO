<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/progressbar_Horizontal"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/domanda1"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dip"
        android:max="100" />
    
    
    <TextView
        android:id="@+id/domanda1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="DOMANDA 1"
        android:textColor="#ffffff"
        android:textSize="20dp" />

   
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/risp1C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/progressbar_Horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="78dp" />

        <RadioButton
            android:id="@+id/risp1A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/risp1B"
            android:layout_alignLeft="@+id/risp1B"
            android:layout_marginBottom="32dp" />

        <RadioButton
            android:id="@+id/risp1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/risp1C"
            android:layout_alignLeft="@+id/risp1C"
            android:layout_marginBottom="37dp" />
    </RadioGroup>

</RelativeLayout>