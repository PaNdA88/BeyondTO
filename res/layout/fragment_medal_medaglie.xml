<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/valentino1"
    android:orientation="vertical"
    android:padding="14dp" >

    <ScrollView
        android:id="@+id/scrollView1"
        style="@style/ScrollbarShapeStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:padding="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="479dp" >

            <ImageView
                android:id="@+id/med1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divisore1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/medaglia1" />

            <TextView
                android:id="@+id/nome_med1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/med1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="DUELLANTE"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/med2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/med1"
                android:layout_below="@+id/divisore2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/medaglia2" />

            <TextView
                android:id="@+id/nome_med2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/med2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="CONQUISTATORE"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/med3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/med1"
                android:layout_below="@+id/divisore3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/medaglia3" />

            <TextView
                android:id="@+id/nome_med3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/med3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="PREMIO FEDELTA&apos;"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <View
                android:id="@+id/divisore2"
                android:layout_width="200dp"
                android:layout_height="0.5dp"
                android:layout_below="@+id/nome_med1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/gradient" />

            <View
                android:id="@+id/divisore3"
                android:layout_width="200dp"
                android:layout_height="0.5dp"
                android:layout_below="@+id/nome_med2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="38dp"
                android:background="@drawable/gradient" />

            <TextView
                android:id="@+id/desc_med2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nome_med2"
                android:layout_centerHorizontal="true"
                android:text="Hai conquistato 30 edifici"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/desc_med1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nome_med1"
                android:layout_centerHorizontal="true"
                android:text="Hai attaccato 10 edifici"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/desc_med3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nome_med3"
                android:layout_centerHorizontal="true"
                android:text="Hai giocato per 30 giorni consecutivi"
                android:textColor="#ffffff"
                android:textSize="14dp" />
            
        </RelativeLayout>
        
    </ScrollView>

</RelativeLayout>