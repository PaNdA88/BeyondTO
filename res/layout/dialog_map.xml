<TextView
         android:id="@+id/textAction"
         android:layout_marginTop="15dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:text="@string/action" />

     <ImageView
         android:id="@+id/imageDialog"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_below="@id/textAction"
         android:layout_marginTop="15dp"
         android:background="@drawable/image_border"
         android:src="@drawable/frejus" />

     
     
      <!-- Stringa per segnlalare la proprietÃ  dell'azione -->
     
     <!-- Stringa per la scelta dell'azione --> 

     <TextView
         android:id="@+id/textProp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_below="@id/imageDialog"
         android:layout_marginTop="15dp"
         android:text="@string/proprierty" />

     <TextView
         android:id="@+id/textStatePlace"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
         android:layout_below="@id/textProp"
         android:layout_marginTop="15dp"
         android:text="@string/statePlace" />
     
     <TextView
         android:id="@+id/textFirstAtt"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
         android:layout_below="@id/textStatePlace"
         android:layout_marginTop="15dp"
         android:text="Orario primo attacco:" />

     <TextView
         android:id="@+id/textNumberAtt"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_below="@id/textFirstAtt"
         android:layout_marginTop="15dp"
         android:text="@string/numberAtt" />
     
     <TextView
         android:id="@+id/textNumberDif"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_below="@id/textNumberAtt"
         android:layout_marginTop="15dp"
         android:text="@string/numberDif" />
     
<Button
    android:id="@+id/yesButton"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/textNumberDif"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="30dp"
    android:background="@drawable/yes_button"
    
    android:text="SI" />

     <Button
         android:id="@+id/noButton"
         android:layout_width="120dp"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/yesButton"
         android:layout_alignBottom="@+id/yesButton"
         android:layout_alignParentRight="true"
         android:layout_marginRight="24dp"
        
         android:background="@drawable/no_button"
         android:text="NO" />

</RelativeLayout>
