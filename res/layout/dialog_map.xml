<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relLayoutLuogo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_shape"
    android:padding="10dp" >

    <TextView
        android:id="@+id/titleDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:textColor="@color/theme_yellow"
        android:textSize="25sp" />

    <View
        android:id="@+id/divider"
        android:layout_width="290dp"
        android:layout_height="1dp"
        android:layout_below="@id/titleDialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/gradient_inverse" />

    <ImageView
        android:id="@+id/imageDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/image_border" />

    <RelativeLayout
        android:id="@+id/textProp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageDialog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:id="@+id/textState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textProp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <View
        android:id="@+id/divisore"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_below="@+id/textState"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradient" />

    <RelativeLayout
        android:id="@+id/textFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divisore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:id="@+id/textAtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textFirst"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/textDif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textAtt"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/textAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDif"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:id="@+id/textButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textAct"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" >

        <RelativeLayout
            android:id="@+id/textButtyes"
            android:layout_width="76dp"
            android:layout_height="32dp"
            
            />

        <RelativeLayout
            android:id="@+id/textButtno"
            android:layout_width="76dp"
            android:layout_height="32dp"
            
            android:layout_toRightOf="@id/textButtyes" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/textEsci"
        android:layout_width="76dp"
        android:layout_height="32dp"
        android:layout_below="@id/divisore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>