        android:layout_centerHorizontal="true"
        android:src="@drawable/sword" /> -->

    <TextView
        android:id="@+id/obiettivo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/icon"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/testoNotifica"
        android:textColor="#ffffff" />
    
    <TextView
        android:id="@+id/utente"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/obiettivo"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="#ffffff" />
    
     <TextView
        android:id="@+id/azione"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/utente"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="#ffffff" />
     
       <TextView
        android:id="@+id/giorno"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/azione"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="#ffffff" />
    

</RelativeLayout>
