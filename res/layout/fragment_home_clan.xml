<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mole2" >
     
    <TextView
        android:id="@+id/nomeClan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="@string/nomeClan"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/logoClan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomeClan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <View
        android:id="@+id/divisore1"
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:layout_below="@+id/logoClan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/gradient" />

    <TextView
        android:id="@+id/numVittorie"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/divisore1"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="@string/numVittorie"
        android:textColor="#ffffff"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/numMembri"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/divisore1"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/numMembri"
        android:textColor="#ffffff"
        android:textSize="16dp" />

</RelativeLayout>    